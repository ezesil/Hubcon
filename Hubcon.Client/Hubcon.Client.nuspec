<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2012/06/nuspec.xsd">
	<metadata>
		<id>Hubcon.Client</id>
		<version>1.0.7-beta</version>
		<authors>ezedev</authors>
		<description>A .NET client for consuming remote Hubcon.Server based APIs via RPC-like strongly-typed C# contracts, through HTTP and WebSockets.</description>
		<tags>http websockets rpc</tags>
		<repository type="git" url="https://github.com/ezesil/Hubcon" branch="main" />
		<requireLicenseAcceptance>false</requireLicenseAcceptance>
		<!-- NO dependencies section - this is the key! -->

		<dependencies>		
			<dependency id="Microsoft.Extensions.DependencyInjection" version="9.0.6" />
		</dependencies>
	</metadata>
	<files>
		<!-- Include the main assembly for net8.0 -->
		<file src="bin\Release\net8.0\Hubcon.Client.dll" target="lib\net8.0" />
		<file src="bin\Release\net8.0\Hubcon.Client.pdb" target="lib\net8.0" />

		<!-- Include all dependency assemblies -->
		<file src="bin\Release\net8.0\Hubcon.Client.Abstractions.dll" target="lib\net8.0" />
		<file src="bin\Release\net8.0\Hubcon.Client.Abstractions.pdb" target="lib\net8.0" />
		
		<file src="bin\Release\net8.0\Hubcon.Client.Core.dll" target="lib\net8.0" />
		<file src="bin\Release\net8.0\Hubcon.Client.Core.pdb" target="lib\net8.0" />
		
		<file src="bin\Release\net8.0\Hubcon.Shared.Abstractions.Standard.dll" target="lib\net8.0" />
		<file src="bin\Release\net8.0\Hubcon.Shared.Abstractions.Standard.pdb" target="lib\net8.0" />
		
		<file src="bin\Release\net8.0\Hubcon.Shared.Abstractions.dll" target="lib\net8.0" />
		<file src="bin\Release\net8.0\Hubcon.Shared.Abstractions.pdb" target="lib\net8.0" />
		
		<file src="bin\Release\net8.0\Hubcon.Shared.Core.dll" target="lib\net8.0" />
		<file src="bin\Release\net8.0\Hubcon.Shared.Core.pdb" target="lib\net8.0" />

		<!-- Include README -->
		<file src="../README.md" target="" />
	</files>
</package>